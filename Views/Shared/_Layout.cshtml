<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")

     @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/slide.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/tabcontrol1.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        li.selected {
            background: yellow;
            color: red;
        }
    </style>
</head>
<body>
    <div>
        <div class="row">
            <div class="col-md-2" style="margin-left:50px">
                <img src="~/images/logo1.jpg" />
            </div>

            <div class="col-md-6" style="width:600px; margin-left:40px">
                <center>
                    <h1 style="color: #bf8c1b; text-shadow: 2px 2px ">ĐỒ NỘI THẤT SƠN VIỆT</h1>
                    <h3 style="color: #c79563; font-family: cursive; font-size: 28px ">Tô điểm thế giới bên trong ngôi nhà của bạn</h3>
                    @using (Html.BeginForm("ViewSearch", "Goods"))
                    {
                        <input class="form-control" placeholder="Tìm kiếm sản phẩm" name="nameProduct" type="text" style="float:left; padding: 10px; max-width:500px; width: 500px; height: 45px;" />
                        <button style="float: right; background: #f57223; color:white; width: 50px; font-size:22px" type="submit" class="btn btn-group"><i class="fa fa-search"></i></button>
                    }

                </center>

            </div>
            <div class="col-md-3" style="margin-left:50px; font-size:20px">
                <div style="height:120px">
                    <div><h3 style="color: #e95656; font-weight: bold; font-size: 30px;">Hỗ trợ khách hàng</h3> </div>
                    <img src="~/images/hotline.gif" style="width:270px; height:100px">

                </div>
                <div style="color:orangered; margin-top:6px">
                    <a style="padding-right: 20px; color: #c79563; border-right: 1px solid #c36833;" href="#">Đăng nhập</a>
                    <a style="color: #c79563;" href="#">Đăng ký</a>
                </div>
            </div>


        </div>

    </div>
    <div class="wd-btn-career" style="height: 45px; background: #869dde;">
        <div class="wd-center" style="background:white">
            <ul class="home" style="font-weight:bold">
                <li class="active" style="width:365px">
                    <a href="@Url.Action("Index", "Home")">
                        <span class="navbar1"><i class="fas fa-home"></i></span>
                        TRANG CHỦ
                    </a>
                </li>
                <li class="notifi" style="background: #42403b; padding-right: 300px; width: 225px; font-size: 16px; line-height: 39px">

                    <div class="dropdown" style="margin-left:70px">
                        <div class="dropbtn" style="color: white; font-weight: bold; width: 200px; height: 45px;">
                            <span style="font-size:24px; margin-right:10px">
                                <i style="margin-left:-55px" class="far fa-bell"></i>
                            </span>

                            DANH MỤC SẢN PHẨM
                            <i class="fa fa-caret-down"></i>
                        </div>
                        <div class="dropdown-content">
                            <a href="@Url.Action("Room", "Goods", new { id="LR"})">phòng khách</a>
                            <a href="@Url.Action("Room", "Goods", new { id="DR"})">phòng ăn</a>
                            <a href="@Url.Action("Room", "Goods", new { id="BR"})">phòng ngủ</a>
                            <a href="@Url.Action("Room", "Goods", new { id="WR"})">phòng làm việc</a>
                        </div>
                    </div>

                </li>
                <li style="width:165px">
                    <a href="@Url.Action("About", "Home")">
                        <span class="navbar1"><i class="fab fa-wpforms"></i></span>
                        giới thiệu
                    </a>
                </li>

                <li style="width:325px">
                    <a href="@Url.Action("DesignFurniture", "DesignFurniture")">
                        <span class="navbar1"><i class="fab fa-wpforms"></i></span>
                        thiết kế nội thất
                    </a>
                </li>



                <li style="width:165px">
                    <a href="@Url.Action("Contact", "Home")">
                        <span class="navbar1"><i class="far fa-bell"></i></span>
                        liên hệ
                    </a>
                </li>




